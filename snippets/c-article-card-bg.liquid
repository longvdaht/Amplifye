{%- if article != blank -%}
	{%- liquid
		assign bg_color = article.metafields.custom.color
		assign hover_color = 'var(--cr-black)'
		assign author = article.metafields.custom.author
		assign main_category = article.metafields.custom.category.value.title | default: article.tags.first

		if bg_color == 'White'
			assign bg_color = 'bg-cream-dark cr-black'
			assign hover_color = 'var(--cr-cream)'
		elsif bg_color == 'Orange'
			assign bg_color = 'bg-orange-dark cr-cream'
		elsif bg_color == 'Blue'
			assign bg_color = 'bg-blue cr-black'
			assign hover_color = 'var(--cr-cream)'
		else
			assign bg_color = 'bg-black cr-cream'
		endif
	-%}

	<div
		class="c-article-card-bg f-h f-a-s{% if class %} {{ class }}{% endif %} {{ bg_color }}"
		style="--hover-color: {{ hover_color }}"
	>
		<div class="c-article-card-bg__content f-v f-j-s">
			<div class="c-article-card-bg__category btn-square t-l-4">
				{{ main_category | append: ' :' }}
			</div>
			<h3 class="c-article-card-bg__title t-h-3">{{- article.title -}}</h3>
			<div class="c-article-card-bg__author t-b-2">{{- author -}}</div>
			<a
				class="c-article-card-bg__cta btn-outline tablet-up-only"
				href="{{- article.url -}}"
				title="{{- article.title | escape -}}"
				><span class="btn-outline__label">Read</span></a
			>
		</div>

		<div class="c-article-card-bg__info f-v f-a-s t-l-4">
			<div class="c-article-card-bg__action f-h f-a-c">
				<div class="c-article-card-bg__date f-h f-a-c">
					<span
						class="js-article-read-time"
						data-content="{{ article.content | strip_html | strip_newlines | escape }}"
					></span>
					<span class="">
						{{- article.published_at | date: '%m.%Y' -}}
					</span>
				</div>

				<a
					class="c-article-card-bg__cta btn-outline f-h f-j-c f-a-c tablet-down-only"
					href="{{- article.url -}}"
					title="{{- article.title | escape -}}"
					><span class="btn-outline__label">Read</span></a
				>
			</div>

			{%- if article.image != null -%}
				<div class="c-article-card-bg__thumbnail bg-subtle">
					<span class="object-fit">
						{%- render 'c-img-srcset',
							image: article.image,
							alt: article.title
						-%}
					</span>
				</div>
			{%- endif -%}
		</div>

		<a
			class="c-article-card-bg__url p-fill"
			href="{{- article.url -}}"
			title="{{- article.title | escape -}}"
		></a>
	</div>
{%- endif -%}
