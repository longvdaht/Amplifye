{% style %}
    #shopify-section-{{ section.id }} {
        background: #FDF3E0;
        padding: 80px 0;
    }

    .landing-text-columns__header {
        align-items: center;
    }

    .landing-text-columns__header .c-header {
        text-align: center;
    }

    .landing-text-columns__header .c-header__subheading {
        font-size: 18px;
    }

    .landing-text-columns__item {
        max-width: 300px;
        height: 300px;
        padding: 40px 30px;
        background: #C14B24;
        margin-left: 20px;
        color: #FFFAF1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        border-radius: 8px;
    }

    .landing-text-columns__items {
        margin-top: 40px;
    }

    .landing-text-columns__item:first-child {
        margin-left: 0;
    }

    .landing-text-columns__item-title {
        font-family: GT Pressura Mono;
        font-weight: 400;
        font-size: 40px;
        line-height: 1.17;
        text-transform: uppercase;
    }

    .large_title.landing-text-columns__item-title {
        font-size: 80px;
        letter-spacing: 4px;
    }

    .landing-text-columns__item-text {
        font-family: Basis Grotesque;
        font-weight: 400;
        font-size: 18px;
        line-height: 1.25;
        letter-spacing: 1.8px;
        text-transform: uppercase;
    }

    @media (max-width: 599.98px) {
      .landing-text-columns__item {
          margin-left: 0;
          margin-top: 10px;
      }

      .landing-text-columns__item:first-child {
          margin-top: 0;
      }

      .landing-text-columns__item-title {
          font-size: 30px;
      }

      .large_title.landing-text-columns__item-title {
          font-size: 50px;
      }

      .landing-text-columns__item-text {
          font-size: 15px;
          letter-spacing: 1.5px;
      }
    }
{% endstyle %}

{%- liquid
    assign subheading = section.settings.subheading
    assign heading = section.settings.heading
    assign heading_size = heading_size | default: section.settings.heading_size | default: 'h2'
    assign hydration = hydration | default: 'on:idle'
-%}

<div class="index-section text-columns-{{ section.id }}">

  <div class="page-width">
    <div class="landing-text-columns__header p-x-max f-v">
        {%- if subheading != blank or heading != blank -%}
            {%- render 'c-header',
                subheading: subheading,
                heading: heading,
                max_width: 1100
            -%}
        {%- endif -%}
    </div>

    <div class="landing-text-columns__items f-h f-w f-j-c">
      {%- for block in section.blocks -%}
        {% liquid
          assign bkg_img = ''
          if block.settings.background_image != blank
            assign bkg_img = block.settings.background_image | img_url: 'master'
          endif
        %}
        <div class="landing-text-columns__item" {% if bkg_img != blank %}style="background-image: url({{ bkg_img }})"{% endif %}>
          {%- if block.settings.title != blank -%}
            <span class="{% if block.settings.large_title %}large_title{% endif %} landing-text-columns__item-title">
              {{ block.settings.title }}
            </span>
          {%- endif -%}
          {%- if block.settings.text != blank -%}
            <div class="landing-text-columns__item-text">{{ block.settings.text }}</div>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>
