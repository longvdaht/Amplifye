{% schema %}
{
	"name": "L - Image Text Split",
	"tag": "section",
	"class": "s-its landing-s-its m-y-section p-x-md",
	"presets": [
		{
			"name": "L - Image Text Split",
			"settings": {
				"media_type": "image",
				"image": "shopify://shop_images/f31591a2fdc581df619bf0c58753399d504292b1_1.gif",
				"heading": "From rates of consumption to rates of absorption.",
				"cta_label": "The Science",
				"cta_url": "shopify://pages/the-science"
			}
		}
	],
	"settings": [
		{
			"type": "header",
			"content": "Media"
		},
		{
			"type": "radio",
			"id": "media_type",
			"label": "Media Type",
			"options": [
				{
					"value": "image",
					"label": "Image"
				},
				{
					"value": "video",
					"label": "Shopify-hosted Video"
				}
			],
			"default": "image"
		},
		{
			"type": "image_picker",
			"id": "image",
			"label": "Image"
		},
		{
			"type": "video",
			"id": "video",
			"label": "Shopify-hosted Video"
		},
		{
			"type": "header",
			"content": "Content"
		},
		{
			"type": "text",
			"id": "heading",
			"label": "Heading"
		},
        {
            "type": "header",
            "content": "Text"
        },
		{
			"type": "text",
			"id": "text_1",
			"label": "Text - 1"
		},
		{
			"type": "text",
			"id": "text_2",
			"label": "Text - 2"
		},
		{
			"type": "text",
			"id": "text_3",
			"label": "Text - 3"
		},
		{
			"type": "text",
			"id": "text_4",
			"label": "Text - 4"
		},
		{
			"type": "text",
			"id": "text_5",
			"label": "Text - 5"
		},
        {
            "type": "header",
            "content": "Button"
        },
		{
			"type": "text",
			"id": "cta_label",
			"label": "CTA Label"
		},
		{
			"type": "url",
			"id": "cta_url",
			"label": "CTA URL"
		}
	]
}
{% endschema %}

{%- liquid
	assign media_type = section.settings.media_type
	assign image = section.settings.image
	assign video = section.settings.video

	if media_type == 'image' and image != null
		assign selected_media_type = 'image'
	elsif media_type == 'video' and video != null
		assign selected_media_type = 'video'
	endif
-%}

{%- render 'landing-c-its',
	heading: section.settings.heading,
	text_1: section.settings.text_1,
	text_2: section.settings.text_2,
	text_3: section.settings.text_3,
	text_4: section.settings.text_4,
	text_5: section.settings.text_5,
	cta_label: section.settings.cta_label,
	cta_url: section.settings.cta_url,
	selected_media_type: selected_media_type,
	image: image,
	video: video
-%}
