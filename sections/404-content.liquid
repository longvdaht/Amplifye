{% schema %}
{
	"name": "404 Content",
	"tag": "section",
	"class": "p-404 f-v f-j-c f-a-c",
	"settings": [
		{
			"type": "text",
			"id": "heading",
			"label": "Heading",
			"default": "This page doesn't exist"
		},
		{
			"type": "richtext",
			"id": "paragraph",
			"label": "Paragraph"
		},
		{
			"type": "text",
			"id": "cta_label",
			"label": "CTA Label",
			"default": "Continue Shopping"
		},
		{
			"type": "url",
			"id": "cta_url",
			"label": "CTA URL",
			"default": "/collections"
		}
	]
}
{% endschema %}

{% liquid
	assign heading = section.settings.heading
	assign paragraph = section.settings.paragraph
	assign cta_label = section.settings.cta_label
	assign cta_url = section.settings.cta_url
%}

<div class="p-x-sm wysiwyg">
	<h1>{{- heading | default: "This page doesn't exist" -}}</h1>

	{%- if paragraph != blank -%}
		{{- paragraph -}}
	{%- endif -%}

	{%- if cta_label != blank and cta_url != blank -%}
		<a
			class="btn"
			href="{{- cta_url -}}"
		>
			{{- cta_label -}}
		</a>
	{%- endif -%}
</div>
