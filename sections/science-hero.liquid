{% schema %}
{
	"name": "Science Hero",
	"tag": "section",
	"class": "science-hero",
	"settings": [
		{
			"type": "header",
			"content": "Media"
		},
		{
			"type": "radio",
			"id": "media_type",
			"label": "Media Type",
			"options": [
				{
					"value": "image",
					"label": "Image"
				},
				{
					"value": "video",
					"label": "Shopify-Hosted Video"
				}
			],
			"default": "image"
		},
		{
			"type": "image_picker",
			"id": "image",
			"label": "Image"
		},
		{
			"type": "image_picker",
			"id": "image_mobile",
			"label": "Image (Mobile)"
		},
		{
			"type": "video",
			"id": "video",
			"label": "Shopify-Hosted Video"
		},
		{
			"type": "header",
			"content": "Content"
		},
		{
			"type": "text",
			"id": "subheading",
			"label": "Subheading"
		},
		{
			"type": "text",
			"id": "heading",
			"label": "Heading"
		},
		{
			"type": "textarea",
			"id": "paragraph",
			"label": "Paragraph"
		},
		{
			"type": "text",
			"id": "cta_label",
			"label": "CTA Label"
		},
		{
			"type": "url",
			"id": "cta_url",
			"label": "CTA URL"
		}
	]
}
{% endschema %}

{%- liquid
	assign subheading = section.settings.subheading
	assign heading = section.settings.heading
	assign paragraph = section.settings.paragraph
	assign cta_label = section.settings.cta_label
	assign cta_url = section.settings.cta_url
	assign media_type = section.settings.media_type
	assign image = section.settings.image
	assign image_mobile = section.settings.image_mobile
	assign video = section.settings.video

	if media_type == 'image' and image != null
		assign selected_media_type = 'image'
	elsif media_type == 'video' and video != null
		assign selected_media_type = 'video'
	endif
-%}

{%- render 'c-editorial-full',
	subheading: subheading,
	heading: heading,
	paragraph: paragraph,
	cta_label: cta_label,
	cta_url: cta_url,
	selected_media_type: selected_media_type,
	image: image,
	image_mobile: image_mobile,
	video: video,
	is_full_bleed: true
-%}
