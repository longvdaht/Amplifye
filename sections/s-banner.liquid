{% schema %}
{
	"name": "Banner",
	"tag": "section",
	"class": "s-banner p-x-max m-y-section-half",
	"presets": [
		{
			"name": "Banner",
			"settings": {
				"heading": "Is P24 right for you?",
				"cta_label": "Let's Chat",
				"cta_url": "",
				"color_scheme": "",
				"activate_chatbot": true
			}
		}
	],
	"settings": [
		{
			"type": "text",
			"id": "heading",
			"label": "Heading"
		},
		{
			"type": "text",
			"id": "cta_label",
			"label": "CTA Label"
		},
		{
			"type": "url",
			"id": "cta_url",
			"label": "CTA URL"
		},
		{
			"type": "color_scheme",
			"id": "color_scheme",
			"default": "scheme_1",
			"label": "Color Scheme"
		},
		{
			"type": "checkbox",
			"id": "activate_chatbot",
			"label": "Activate Chatbot",
			"info": "Replace CTA URL as Chatbot button"
		}
	]
}
{% endschema %}

{% liquid
	assign heading = section.settings.heading
	assign cta_label = section.settings.cta_label
	assign cta_url = section.settings.cta_url
	assign color_scheme = section.settings.color_scheme
	assign activate_chatbot = section.settings.activate_chatbot
%}

{%- render 'c-banner',
	heading: heading,
	cta_label: cta_label,
	cta_url: cta_url,
	color_scheme: color_scheme,
	activate_chatbot: activate_chatbot
-%}
