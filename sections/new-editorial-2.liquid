{% schema %}
{
	"name": "New - Editorial (2)",
	"tag": "section",
	"class": "s-editorial new-editorial-2 s-landing-editorial s-landing-editorial-2 cr-cream",
	"presets": [
		{
			"name": "New - Editorial (2)",
		}
	],
	"settings": [
		{
			"type": "header",
			"content": "Media"
		},
		{
			"type": "color",
			"id": "background_color",
			"label": "Background Color",
            "default": "#FDF3E0"
		},
		{
			"type": "header",
			"content": "Content"
		},
		{
			"type": "color",
			"id": "color",
			"label": "Content Colour"
		},
		{
			"type": "number",
			"id": "content_max_width",
			"default": 490,
			"info": "We use px",
			"label": "Content max width"
		},
		{
			"type": "text_alignment",
			"id": "alignment",
			"label": "Text alignment",
			"default": "center"
		},
		{
			"type": "checkbox",
			"id": "vertical_align_c",
			"label": "Make vertical align is center"
		},
		{
			"type": "text",
			"id": "subheading",
			"label": "Subheading"
		},
		{
			"type": "inline_richtext",
			"id": "heading",
			"label": "Heading"
		},
		{
			"type": "checkbox",
			"id": "is_smaller_heading",
			"label": "Use Smaller Heading"
		},
		{
			"type": "textarea",
			"id": "paragraph",
			"label": "Paragraph"
		},
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
        },
		{
			"type": "checkbox",
			"id": "activate_orange_btn",
			"label": "Activate orange button"
		},
		{
			"type": "text",
			"id": "cta_label",
			"label": "CTA Label"
		},		
		{
			"type": "checkbox",
			"id": "use_btn_outline",
			"label": "Use btn with outlie"
		},
		{
			"type": "url",
			"id": "cta_url",
			"label": "CTA URL"
		},
		{
			"type": "inline_richtext",
			"id": "source",
			"label": "Source"
		}
	]
}
{% endschema %}

{%- render 'new-editorial-2',
	subheading: section.settings.subheading,
	color: section.settings.color,
	content_max_width: section.settings.content_max_width,
	alignment: section.settings.alignment,
	vertical_align_c: section.settings.vertical_align_c,
	heading: section.settings.heading,
	is_smaller_heading: section.settings.is_smaller_heading,
	paragraph: section.settings.paragraph,
    image: section.settings.image,
	cta_label: section.settings.cta_label,
	cta_url: section.settings.cta_url,
	use_btn_outline: section.settings.use_btn_outline,
	source: section.settings.source,
	background_image: section.settings.background_image,
	background_image_mobile: section.settings.background_image_mobile,
	activate_orange_btn: section.settings.activate_orange_btn,
-%}
